    <style name="nextBtn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_next_pre_btn_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:onClick">nextPage</item>
        <item name="android:text">下一步</item>
        <item name="android:textColor">#fdfdfd</item>
    </style>

    <style name="preBtn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_next_pre_btn_bg</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:onClick">prePage</item>
        <item name="android:text">上一步</item>
        <item name="android:textColor">#fdfdfd</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
