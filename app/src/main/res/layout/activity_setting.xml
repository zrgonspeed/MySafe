<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <!--将相对布局抽取到单独一个类中去管理,以后只需要在布局文件中添加此类即可达到效果-->
    <top.cnzrg.mysafe.view.SettingItemView xmlns:mysafe="http://schemas.android.com/apk/res/top.cnzrg.mysafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mysafe:descoff="已关闭"
        mysafe:descon="已开启"
        mysafe:desctitle="自动检测更新"></top.cnzrg.mysafe.view.SettingItemView>

    <top.cnzrg.mysafe.view.SettingItemView xmlns:mysafe="http://schemas.android.com/apk/res/top.cnzrg.mysafe"
        android:id="@+id/siv_phone_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mysafe:descoff="已关闭"
        mysafe:descon="已开启"
        mysafe:desctitle="电话归属地显示"></top.cnzrg.mysafe.view.SettingItemView>


    <top.cnzrg.mysafe.view.SettingItemClickView
        android:id="@+id/sicv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></top.cnzrg.mysafe.view.SettingItemClickView>

    <top.cnzrg.mysafe.view.SettingItemClickView
        android:id="@+id/sicv_toast_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></top.cnzrg.mysafe.view.SettingItemClickView>

    <top.cnzrg.mysafe.view.SettingItemView xmlns:mysafe="http://schemas.android.com/apk/res/top.cnzrg.mysafe"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mysafe:descoff="已关闭"
        mysafe:descon="已开启"
        mysafe:desctitle="黑名单拦截设置"></top.cnzrg.mysafe.view.SettingItemView>
</LinearLayout>